{{ 'section-text-blocks.min.css' | asset_url | stylesheet_tag }}

<div
  class="wrapper-spacing--v wrapper-spacing--h promotion-block-section color-scheme--{{ section.settings.colors }}"
  data-wetheme-section-type="text--promotion-blocks" 
  data-wetheme-section-id="{{ section.id }}"
  style="--padding-section-top: {{ section.settings.section_padding_top }}px; --padding-section-bottom: {{ section.settings.section_padding_bottom }}px;"
>

{% case section.blocks.size %}
  {% when 1 %}
    {%- assign column_size = 'large--one-whole medium--one-whole' -%}
    {%- assign column_amount = 'promotion-block-section--one-column' -%}
  {% when 2 %}
    {%- assign column_size = 'large--one-half medium--one-half' -%}
  {% when 3 %}
    {%- assign column_size = 'large--one-third medium--one-third' -%}
{% endcase %}

  <div class="small--hide width--content">
    <div class="grid promotion-block-section {{ column_amount }}">

      {% for block in section.blocks %}
        {%- assign advert_has_link = false -%}
        {% if block.settings.link != blank %}
          {%- assign advert_has_link = true -%}
        {% endif %}

        <div class="grid__item {{ column_size }}" {{ block.shopify_attributes }}>
          <div class="promotion-block-item">
            {% if block.settings.icon != 'none' %}
              <div class="promotion-block-icon">
                {% render 'theme-icon', icon: block.settings.icon, widthUnset: true, iconClasses: 'icon-content' %}
              </div>
            {% endif %}
            <div class="promotion-block-content">
              {% if advert_has_link %}
                <a href="{{ block.settings.link }}">
              {% endif %}

                {% if block.settings.heading != blank %}
                  <span class="promotion-block-section--header h5">{{ block.settings.heading | escape }}</span>
                {% endif %}

                {% if block.settings.subheading != blank %}
                  <span class="promotion-block-section--sub-header">{{ block.settings.subheading | escape }}</span>
                {% endif %}

              {% if advert_has_link %}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="container width--content large--hide small--show medium--hide">
    <div class="grid promotion-block-section swiper mobile-homepage-promotion-blocks {{ column_amount }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {%- assign advert_has_link = false -%}
          {% if block.settings.link != blank %}
            {%- assign advert_has_link = true -%}
          {% endif %}

          <div class="swiper-slide grid__item {{ column_size }}" {{ block.shopify_attributes }}>
            <div class="promotion-block-item">
              {% if block.settings.icon != 'none' %}
                <div class="promotion-block-icon">
                  {% render 'theme-icon', icon: block.settings.icon, widthUnset: true, iconClasses: 'icon-content' %}
                </div>
              {% endif %}
              <div class="promotion-block-content">
                {% if advert_has_link %}
                  <a href="{{ block.settings.link }}">
                {% endif %}

                  {% if block.settings.heading != blank %}
                    <span class="promotion-block-section--header h5">{{ block.settings.heading }}</span>
                  {% endif %}

                  {% if block.settings.subheading != blank %}
                    <span class="promotion-block-section--sub-header">{{ block.settings.subheading }}</span>
                  {% endif %}

                {% if advert_has_link %}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  .promotion-block-item {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    text-align: center;
  }
  .promotion-block-icon {
    flex-shrink: 0;
    margin-right: 10px;
    display: flex;
    justify-content: center;
  }
  .promotion-block-icon .icon-content {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
  }
  .promotion-block-content {
    text-align: left;
    display: flex;
    flex-direction: column;
  }
  
  @media screen and (max-width: 480px) {
    .promotion-block-icon {
      margin-right: 8px;
    }
    .promotion-block-icon .icon-content {
      width: {{ section.settings.icon_size | times: 0.8 }}px;
      height: {{ section.settings.icon_size | times: 0.8 }}px;
    }
  }
</style>

