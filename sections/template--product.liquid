{{ 'template-product.min.css' | asset_url | stylesheet_tag: preload: true }}

{% liquid 
  assign current_variant = product.selected_or_first_available_variant

  assign on_sale = false
  if current_variant.compare_at_price > current_variant.price
    assign on_sale = true
  endif

  assign product_description_width = ''
  assign product_image_width = ''

  assign options_block = section.blocks | where: "type", "options" | first
  assign trust_block = section.blocks | where: "type", "trust_badges" | first

  case section.settings.image_size
    when 'small'
      assign product_description_width = 'large--seven-twelfths' 
      assign product_image_width = 'large--five-twelfths' 
    when 'medium'
      assign product_description_width = 'large--six-twelfths' 
      assign product_image_width = 'large--six-twelfths' 
    when 'large'
      assign product_description_width = 'large--five-twelfths' 
      assign product_image_width = 'large--seven-twelfths' 
  endcase

  assign style = 'full_width'
  if section.settings.image-display == 'thumbnails'
    assign style = section.settings.thumbnail_position
  endif
  if product.media.size < 2
    comment 
      No thumbnails 
    endcomment
    assign style = 'full_width'
  endif

  assign wrap_product = false
  if settings.giftwrap_product_selector != blank
    assign wrap_product = all_products[settings.giftwrap_product_selector]
  endif

  assign change_variant_based_on_thumbnail = false
  for block in section.blocks
    case block.type
      when "options"
        if block.settings.thumbnail_changes_variant == true
          assign change_variant_based_on_thumbnail = true
        endif
    endcase
  endfor

  comment 
    Check for combined listings
  endcomment

  assign is_combined_listing = false
  for option in product.options_with_values
    for value in option.values
      if value.product_url != blank
        assign is_combined_listing = true
        break
      endif
    endfor
  endfor

  if settings.show_currency_code
    assign variant_compare_at_price = current_variant.compare_at_price | money_with_currency
  else
    assign variant_compare_at_price = current_variant.compare_at_price | money
  endif

  assign first_3d_model = product.media | where: 'media_type', 'model' | first
%}

<safe-load-scripts class="hidden">
  <script src="{{ 'component-product-information.js' | asset_url }}" defer="defer" type="module" data-flow-load-key="product-form-information"></script>
</safe-load-scripts>

<div 
  class="wrapper-spacing--h product-section"
  data-wetheme-section-type="template--product"
  data-wetheme-section-id="{{ section.id }}"
>
  <div class="product-single-wrapper width--content">
    <div
      class="grid product-single{% if section.settings.enable_sticky %} product-sticky-wrapper{% endif %}{% if options_block.settings.variant_style == 'dropdowns' %} variant-dropdown-enabled{% else %} variant-swatches-enabled{% endif %}"
      data-product-content-wrapper
      data-section-id="{{ section.id }}"
    >
      {% comment %} ============ PRODUCT MEDIA ============ {% endcomment %}
      <div class="grid__item {{ product_image_width }} context mobile--no-top-margin{% if section.settings.enable_sticky %} product-sticky{% endif %}">
        {% render 'product-media', product: product, section_id: section.id, style: style, thumbnail_position: section.settings.thumbnail_position, hide_out_of_stock_variants: options_block.settings.hide_out_of_stock_variants, change_variant_based_on_thumbnail: change_variant_based_on_thumbnail, enable_video_loop: section.settings.enable_video_loop, first_3d_model: first_3d_model %}
      </div>

      {% comment %} ============ PRODUCT INFORMATION ============ {% endcomment %}
      <product-information 
        data-url="{{ product.url }}"
        data-enable-url-update="true" 
        data-section-id="{{ section.id }}"
        data-original-section-id="{{ section.id }}"
        data-is-combined-listing="{{ is_combined_listing }}"
        class="grid__item product-form-wrapper {{ product_description_width }}{% if section.settings.enable_sticky %} product-sticky{% endif %}"
      >
        {%- assign product_form_id = 'product-form-' | append: section.id -%}

        <div class="product-details-wrapper">
          <div class="product-details--form-wrapper{% if product.available %} product-details--form-wrapper---in-stock{% else %} product-details--form-wrapper---out-of-stock{% endif %}">
            <div class="form-vertical product--add-to-cart-form">
              {% assign spacing_classes = 'product-form-block' %}

              {% if settings.enable_breadcrumbs %}
                <div id="breadcrumbs">
                  {% render 'breadcrumb' %}
                </div>
              {% endif %}

              {% for block in section.blocks %}
                {% case block.type %}
                  {% when '@app' %}
                    {% comment %} ===== APP BLOCK ===== {% endcomment %}
                    <div 
                      class="{{ spacing_classes }}" 
                      style="--custom-margin-bottom: {{ section.settings.app_margin_bottom }}px" 
                      id="shopify-block-{{ block.id }}" {{ block.shopify_attributes }}>
                        {% render block %}
                    </div>

                  {% when 'sku' %}
                    {% if current_variant.sku != blank %}
                      <div
                        data-updates-on-change
                        data-update-id="item-{{ block.id }}"
                        data-block-id="{{ block.id }}"
                        class="{{ spacing_classes }} {% if current_variant.sku == "" %}js{% endif %}"
                        style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                        {{ block.shopify_attributes }}
                      >
                        <span class="current-variant--sku">{{ current_variant.sku }}</span>
                      </div>
                    {% endif %}

                  {% when 'vendor' %}
                    {% comment %} ===== PRODUCT VENDOR BLOCK ===== {% endcomment %}
                    {% if product.vendor != "" %}
                      <div 
                        data-updates-on-change
                        data-update-id="item-{{ block.id }}" 
                        class="{{ spacing_classes }}" 
                        style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" 
                        {{ block.shopify_attributes }}
                      >
                        <span class="product__meta--vendor nav-link-animated">
                          <span class="label-font">{{ product.vendor | link_to_vendor }}</span>
                        </span>
                      </div>
                    {% endif %}

                  {% when 'title' %}
                    {% comment %} ===== PRODUCT TITLE BLOCK ===== {% endcomment %}
                    <div 
                      data-updates-on-change
                      data-update-id="item-{{ block.id }}" 
                      class="{{ spacing_classes }}" 
                      style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" 
                      {{ block.shopify_attributes }}
                    >
                      <h1 class="{{ block.settings.title_font }} product-details-product-title">{{ product.title | escape }}</h1>
                    </div>

                  {% when 'separator' %}
                    {% comment %} ===== SEPARATOR BLOCK ===== {% endcomment %}
                    <div class="product-form-separator {{ spacing_classes }}" style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" {{ block.shopify_attributes }}>
                    </div>

                  {% when 'price' %}
                    {% comment %} ===== PRODUCT PRICE BLOCK ===== {% endcomment %}
                    <div
                      data-updates-on-change
                      data-update-id="item-{{ block.id }}"
                      data-block-id="{{ block.id }}"
                      class="{{ spacing_classes }}" style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" 
                      {{ block.shopify_attributes }}
                    >
                      <div class="product-price-size--{{ block.settings.price_font }} product-price-group">
                        {% if on_sale %}
                          <span class="visually-hidden">{{ 'products.general.sale_price' | t }}</span>
                          <p id="ComparePrice" class="compare-at-price sale-price{% if on_sale %} on-sale{% else %} js{% endif %}">
                            <span class="money">{{ variant_compare_at_price }}</span>
                          </p>
                        {% endif %}

                        {% render 'product-pricing', current_variant: current_variant %}
                        {% render 'unit-price-measurement-variant', variant: current_variant %}
                      </div>

                      {%- liquid
                        if cart.taxes_included and block.settings.tax_included
                          assign show_tax_included = true
                        endif
                        if shop.shipping_policy.body != blank and block.settings.shipping_policy
                          assign show_shipping_policy = true
                        endif
                      -%}
                      {%- if show_tax_included or show_shipping_policy -%}
                        <div class="product-page__policies rte text-link-animated">
                          {%- if show_tax_included -%}
                            {{ 'products.product.include_taxes' | t }}
                          {%- endif -%}
                          {%- if show_shipping_policy -%}
                            {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                          {%- endif -%}
                        </div>
                      {%- endif -%}

                      <div class="shopify-payment-terms__container">
                        {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                        {%- form 'product', product, id: product_form_installment_id -%}
                          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                          {{ form | payment_terms }}
                        {%- endform -%}
                      </div>
                    </div>

                    {% when 'product-description' %}
                      {% comment %} ===== PRODUCT DESCRIPTION BLOCK ===== {% endcomment %}
                      {%- if product.description != blank -%}
                        <div 
                          data-updates-on-change
                          data-update-id="item-{{ block.id }}"
                          class="product-description {{ spacing_classes }}{% if block.settings.collapsible_tab %} product-description--collapsible collapsible{% if block.settings.margin_bottom == 0 %} no_margin_bottom{% endif %}{% endif %}" 
                          style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" 
                          {{ block.shopify_attributes }}>
                          {% unless block.settings.collapsible_tab %}
                            <div class="text-link-animated">{{ product.description }}</div>
                          {% else %}
                            {% liquid
                              if block.settings.custom_icon
                                assign icon = block.settings.custom_icon
                                assign custom_icon = true
                              else
                                assign icon = block.settings.icon
                                assign custom_icon = false
                              endif 
                            %}

                            {% render 'collapsible-tab', icon: icon, custom_icon: custom_icon, heading: block.settings.heading, content: product.description, open_close_icon: block.settings.open_close_icon, open_by_default: block.settings.open_by_default, heading_classes: 'label-font' %}
                          {% endunless %}
                        </div>
                      {%- endif -%}

                    {% when 'linked-products' %}
                      {% comment %} ===== LINKED PRODUCTS BLOCK ===== {% endcomment %}
                      <safe-load-scripts class="hidden">
                        <script src="{{ 'component-linked-products.js' | asset_url }}" defer="defer" type="module" data-flow-load-key="linked-products"></script>
                      </safe-load-scripts>

                      {% if block.settings.linked_products != blank %}
                        {% assign linked_products_ids = block.settings.linked_products | map: 'id' %}
                        {% unless linked_products_ids.size == 1 and linked_products_ids contains product.id %}
                          {% assign option_index =  0 %}
                          {% assign swatches_aspect_ratio = block.settings.swatches_aspect_ratio %}
                          <linked-products 
                            data-updates-on-change
                            data-update-id="item-{{ block.id }}" 
                            class="{{ spacing_classes }} linked-products" 
                            style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" 
                            {{ block.shopify_attributes }}
                          >
                            <div class="swatch linked-products-swatch" data-option-index="{{ option_index }}">

                              {% if block.settings.option_name != blank %}
                                <div class="header linked-products--title-wrapper">
                                  <span class="linked-option-label label-font">{{ block.settings.option_name }}</span>
                                  <span class="linked-option-product-title"></span>
                                </div>
                              {% endif %}
                        
                              <div class="swatch-items-wrapper">
                                {% liquid
                                  for linked_product in block.settings.linked_products
                                    assign  escaped_linked_product_variant = linked_product.title | split: ' - ' | last | escape
                                    if linked_product.id == product.id
                                      assign checked = true
                                      assign redirect = blank
                                    else
                                      assign checked = false
                                      assign redirect = linked_product.url
                                    endif
                                    if linked_product.media and linked_product.media.size > 0
                                      assign image_url = linked_product.media[0].preview_image | image_url: width: 250
                                      assign img_aspect_ratio = linked_product.media[0].preview_image.aspect_ratio
                                    elsif linked_product.featured_image != blank
                                      assign image_url = linked_product.featured_image | image_url: width: 250
                                      assign img_aspect_ratio = linked_product.featured_image.aspect_ratio
                                    else
                                      assign image_url = blank
                                      assign img_aspect_ratio = blank
                                    endif
                                    render 'image-swatch', image_url: image_url, value: escaped_linked_product_variant, checked: checked, available: linked_product.available, size: block.settings.swatches_size, aspect_ratio: swatches_aspect_ratio, img_aspect_ratio: img_aspect_ratio, variation_redirect: redirect, section: section, option_index: option_index
                                  endfor
                                %}
                              </div>
                            </div>
                          </linked-products>
                        {% endunless %}
                      {% endif %}

                  {% when 'options' %}
                    {% comment %} ===== PRODUCT OPTIONS BLOCK ===== {% endcomment %}
                    {%- liquid
                      assign show_size_guide_below_options = false
                      if block.settings.size_option_name == '' and block.settings.size_guide_page != blank
                        assign show_size_guide_below_options = true
                      endif

                      assign block_has_content = true
                      if product.has_only_default_variant and show_size_guide_below_options == false
                        assign block_has_content = false
                      endif
                    -%}                
                    <div
                      data-updates-on-change
                      data-update-id="item-{{ block.id }}"
                      data-block-id="{{ block.id }}"
                      class="{{ spacing_classes }}" 
                      {% if block_has_content %}
                        style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px"
                      {% endif %}
                    >
                      {% render 'product-options' with product: product, 
                        size_option_name: block.settings.size_option_name, 
                        size_guide_page: block.settings.size_guide_page,
                        size_guide_label: block.settings.size_guide_label,
                        variant_style: options_block.settings.variant_style, 
                        section_id: section.id, 
                        current_variant: current_variant, 
                        hide_out_of_stock_variants: options_block.settings.hide_out_of_stock_variants, 
                        block_attributes: options_block.shopify_attributes
                      %}

                      {% if show_size_guide_below_options %}
                        <div data-size-guide-below-options{% if product.has_only_default_variant %} class="no-spacing"{% endif %}>
                          <safe-load-scripts class="hidden">
                            <script src="{{ 'component-size-guide-link.js' | asset_url }}" defer="defer" type="module" data-flow-load-key="size-guide-link"></script>
                          </safe-load-scripts>
                        
                          <size-guide-link id="size-guide" class="text-link-animated">
                            <a data-size-guide-link id="size-guide-link" tabindex="0" href="{{ block.settings.size_guide_page.url }}">{{ block.settings.size_guide_label | default: block.settings.size_guide_page.title }}</a>
                          </size-guide-link>
                        </div>
                      {% endif %}
                    </div>

                  {% when 'complementary-products' %}
                    {% comment %} ===== COMPLEMENTARY PRODUCTS BLOCK ===== {% endcomment %}
                    <div 
                      data-updates-on-change
                      data-update-id="item-{{ block.id }}" 
                      class="complementary-products hidden {{ spacing_classes }}{% if block.settings.collapsible_tab %} collapsible{% if block.settings.margin_bottom == 0 %} no_margin_bottom{% endif %}{% endif %}" 
                      style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" 
                      {{ block.shopify_attributes }}
                    >
                      {%- render 'complementary-products-block' with title: block.settings.title, products_limit: block.settings.products_limit, collapsible: block.settings.collapsible_tab, open_close_icon: block.settings.open_close_icon, custom_icon: block.settings.custom_icon, icon: block.settings.icon, id: block.id -%}
                    </div>

                  {% when 'cross-sells' %}
                    {% comment %} ===== CROSS SELL BLOCK ===== {% endcomment %}
                    {% if block.settings.cross_sell_product_1.available or block.settings.cross_sell_product_2.available or block.settings.cross_sell_product_3.available %}
                      <div 
                        data-updates-on-change
                        data-update-id="item-{{ block.id }}" 
                        class="cross-sell {{ spacing_classes }}{% if block.settings.collapsible_tab %} collapsible{% if block.settings.margin_bottom == 0 %} no_margin_bottom{% endif %}{% endif %}" 
                        style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" 
                        {{ block.shopify_attributes }}
                      >
                        {%- assign cross_sells_products = block.settings.cross_sell_product_1 | append: ',' | append: block.settings.cross_sell_product_2 | append: ',' | append: block.settings.cross_sell_product_3 | split: ',' | compact -%}
                        <div class="cross-sell-block">
                          {% unless block.settings.collapsible_tab %}
                            {% render 'cross-sells' with title: block.settings.title, cross_sells_products: cross_sells_products, id: block.id %}
                          {% else %}
                            {% liquid
                              if block.settings.custom_icon
                                assign icon = block.settings.custom_icon
                                assign custom_icon = true
                              else
                                assign icon = block.settings.icon
                                assign custom_icon = false
                              endif 
                            %}

                            <div class="collapsible-tab">
                              <collapsible-button tabindex="0">
                                <div class="summary">
                                  {% render 'text-with-icon', icon: icon, custom_icon: custom_icon, text: block.settings.title, text_classes: 'label-font' %}
                                  <span class="inline-icon--wrapper icon--right">
                                    {% if block.settings.open_close_icon == "plus_minus" %}
                                      {% render 'theme-icon' with icon: 'plus', iconClasses: 'plus-icon' %}
                                      {% render 'theme-icon' with icon: 'minus', iconClasses: 'minus-icon' %}
                                    {% elsif block.settings.open_close_icon == "caret" %}
                                      {% render 'theme-icon', icon: 'chevron_down', iconClasses: 'chevron-down' %}
                                    {% endif %}
                                  </span>
                                </div>
                              </collapsible-button>
                          
                              <div class="collapsible-content">
                                <div class="content rte">
                                  {% render 'cross-sells' with title: blank, cross_sells_products: cross_sells_products, id: block.id %}
                                </div>
                              </div>
                            </div>

                            <safe-load-scripts class="hidden">
                              <script src="{{ 'component-collapsible-button.js' | asset_url }}" type="module" defer="defer" data-flow-load-key="component-collapsible-button"></script>
                            </safe-load-scripts>
                          {% endunless %}
                        </div>
                      </div>
                    {% endif %}

                  {% when 'collapsible-tab' %}
                    {% comment %} ===== COLLAPSIBLE TAB BLOCK ===== {% endcomment %}
                    {% liquid
                      if block.settings.custom_icon
                        assign icon = block.settings.custom_icon
                        assign custom_icon = true
                      else
                        assign icon = block.settings.icon
                        assign custom_icon = false
                      endif 
                    %}
                    
                    {% assign content = block.settings.text %}
                    {% if block.settings.page.content %}
                      {% assign content = content | append: block.settings.page.content %}
                    {% endif %}

                    {%- if icon != 'none' or block.settings.heading != blank or content != blank -%}

                      <div 
                        data-updates-on-change
                        data-update-id="item-{{ block.id }}" 
                        class="collapsible-tab-container collapsible {{ spacing_classes }}{% if block.settings.margin_bottom == 0 %} no_margin_bottom{% endif %}" 
                        style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" 
                        {{ block.shopify_attributes }}
                      >
                        {% render 'collapsible-tab', icon: icon, custom_icon: custom_icon, heading: block.settings.heading, content: content, open_close_icon: block.settings.open_close_icon, open_by_default: block.settings.open_by_default, heading_classes: 'label-font' %}
                      </div>

                    {%- endif -%}

                  {% when 'giftwrap' %}
                    {% comment %} ===== GIFT WRAP BLOCK ===== {% endcomment %}
                    {%- if settings.giftwrap_product_selector > '' and product.available and wrap_product -%}
                      {% if wrap_product.available %}
                        
                        {% liquid 
                          assign field_id = "checkbox-field-" | append: block.id
                          assign giftwrap_label = settings.giftwrap_label_text | escape
                          assign giftwrap_name = 'products.general.giftwrap_label' | t
                          assign field_name = 'properties[' | append: giftwrap_name | append: ']'
                        %}

                        <div class="{{ spacing_classes }} product__meta--giftwrap" style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" {{ block.shopify_attributes }}>
                          {% render 'form-input--checkbox' with id: field_id, form_id: product_form_id, name: field_name, label_text: giftwrap_label %}
                        </div>
                      {% endif %}
                    {%- endif -%}

                  {% when 'quantity' %}
                    {% comment %} ===== QUANTITY BLOCK ===== {% endcomment %}
                    <div
                      data-updates-on-change 
                      data-update-id="item-{{ block.id }}"
                      data-block-id="{{ block.id }}"
                      class="{{ spacing_classes }} {% if section.settings.image_size == 'large' %}col-md-12{% else %}col-md-6{% endif %} col-sm-12 col-xs-12" 
                      style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px" 
                      {{ block.shopify_attributes }}>
                      {% render 'quantity-input' product: product, section_id: section.id %}
                    </div>

                  {% when 'button' %}
                    {% if block.settings.override_button_colors %}
                      {% render 'button-color-overrides' with
                        id: block.id,
                        style: block.settings.button_style,
                        text_color: block.settings.button_text_color,
                        background_color: block.settings.button_background_color
                      %}
                    {% endif %}

                    <div
                      data-updates-on-change
                      data-update-id="item-{{ block.id }}"
                      data-block-id="{{ block.id }}"
                      class="{{ spacing_classes }}{% if block.settings.button_style == 'underlined' %} text-link-animated{% endif %}" 
                      style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px;" 
                      {{ block.shopify_attributes }}
                    >
                      {%- liquid
                        assign button_classes = 'product-block-button'
                        if block.settings.is_full_width
                          assign button_classes = button_classes | append: ' full-width'
                        endif

                        if block.settings.open_in_new_tab
                          assign button_attributes = 'target="_blank" rel="noopener noreferrer"'
                        endif
                      -%}
                      {% render 'dynamic-section-button' with
                        id: block.id,
                        link: block.settings.button_link,
                        label: block.settings.button_label,
                        style: block.settings.button_style,
                        wrapper: false,
                        a_classes: button_classes,
                        attributes: button_attributes
                      %}
                    </div>

                  {% when 'modal' %}
                    {% if block.settings.override_button_colors %}
                      {% render 'button-color-overrides' with
                        id: block.id,
                        style: block.settings.button_style,
                        text_color: block.settings.button_text_color,
                        background_color: block.settings.button_background_color
                      %}
                    {% endif %}

                    <div
                      data-updates-on-change
                      data-update-id="item-{{ block.id }}"
                      data-block-id="{{ block.id }}"
                      class="{{ spacing_classes }}{% if block.settings.button_style == 'underlined' %} text-link-animated{% endif %}" 
                      style="--custom-margin-bottom: {{ block.settings.margin_bottom }}px;" 
                      {{ block.shopify_attributes }}
                    >
                      {%- liquid
                        assign show_modal = true
                        if block.settings.modal_button_label == blank
                          assign show_modal = false
                        endif
                      -%}

                      {%- if show_modal -%}
                        <safe-load-scripts class="hidden">
                          <script src="{{ 'component-theme-modal.js' | asset_url }}" defer="defer" type="module" data-flow-load-key="theme-modal"></script>
                        </safe-load-scripts>

                        <theme-modal data-section-id="{{ section.id }}" data-block-id="{{ block.id }}">
                          {%- if block.settings.modal_button_label -%}
                            {% liquid 
                              assign button_classes = 'product-block-modal'
                              if block.settings.is_full_width
                                assign button_classes = button_classes | append: ' full-width'
                              endif

                              assign button_attributes = 'data-modal-button'
                            %}

                            {% render 'dynamic-section-button' with
                              id: block.id,
                              label: block.settings.modal_button_label,
                              style: block.settings.button_style,
                              wrapper: false,
                              a_classes: button_classes,
                              attributes: button_attributes,
                              has_link: false,
                              aria_label: block.settings.modal_button_label
                            %}
                          {%- endif -%}

                          <template>
                            <div 
                              data-modal-content 
                              class="theme-modal-content"
                            >
                              {% comment %} Close icon {% endcomment %}
                              <button type="button" data-close class="button-unstyled icon-fallback-text standalone-icon--wrapper" aria-label="{{ 'general.accessibility.dismiss.close' | t }}">
                                <span class="fallback-text">{{ 'general.accessibility.dismiss.close' | t }}</span>
                                {% render 'theme-icon' with icon: 'close', iconSize: 20 %}
                              </button>

                              <div class="theme-modal--inner">
                                {% if block.settings.modal_heading != blank %}
                                  <div class="theme-modal-header">
                                    {% comment %} Modal Title {% endcomment %}
                                    <h2 data-modal-title class="modal-title">
                                      {{ block.settings.modal_heading }}
                                    </h2>
                                  </div>
                                {% endif %}

                                {% comment %} Modal Content {% endcomment %}
                                {%- if block.settings.modal_text != blank or block.settings.modal_page != blank -%}
                                  <div data-modal-body class="modal-content">
                                    {% if block.settings.modal_text != blank %}
